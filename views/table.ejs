<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Date</th>
            <th class="text-end">Stepcount</th>
        </tr>
    </thead>
    <tbody>
        <% results.forEach((item, index) => { %>
            <tr>    
                <td><%= (index+1) %>.</td>
                <td><%= item.date %></td>
                <td class="text-end"><%= item.count %></td>
            </tr>

        <% }); %>
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-center">Total: <%= total %> steps</td>
        </tr>
    </tfoot>
</table>
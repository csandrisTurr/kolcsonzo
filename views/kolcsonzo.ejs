<!--Oldal ahol listázza az elérhető könyveket és minden könyv mellett van kölcsönzés gomb-->
<%- include('header') %>

<h4 class="mb-3">Könyvek listája és kölcsönzése</h4>

<%- include('message') %>

<!--itt generálja le dinamikusan a kártyákat-->
<div class="container mt-5">
    <div id="book-cards" class="row">
        <% results.forEach(item => { %>
        <div class="col-md-4 mb-4">
            <div class="card">
                <form class="card-body" action="/api/rental/rent" method="post">
                    <h5 class="card-title"><%= item.title %></h5>
                    <p class="card-text"><%= item.type %></p>

                    <input type="hidden" id="id" name="id" value="<%= item.item_id %>" />
                    <input class="btn btn-primary" type="submit" value="Kölcsönzés" name="kolcsonzesBtn">
                </form>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<script>
</script>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
